#!/bin/bash

REPO="$1"
shift 1
N="$#"

for w in "$@"; do
  grep -i "$w" "$REPO/taglibro/"*/*/*.md | sed 's/:.*//; s/.*taglibro//' | uniq
done |
sort | uniq -c |
awk "\$1 == $N { print \$2 }" |
while read name; do
  echo "${name%md}html"
  head -1 "$REPO/taglibro/$name" | sed -E 's/^. ?//'
  grep '^## ' "$REPO/taglibro/$name" | sed 's/^## //g' | tr '\n' '\t'; echo
done
